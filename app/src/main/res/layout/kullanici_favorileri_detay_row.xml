<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewKullaniciFavorileriDetayAdi"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="147dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/new_primarycolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewKullaniciFavorileriDetayResmi"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="127dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewKullaniciFavorileriDetayAdi"
        app:srcCompat="@drawable/ic_launcher_background" />
    <TextView
        android:id="@+id/textView3KullaniciFavorileri"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="149dp"
        android:gravity="center"
        android:text="MALZEMELER"
        android:textColorHint="@color/new_primarycolor"
        android:textSize="18sp"
        android:textColor="@color/new_primarycolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewKullaniciFavorileriDetayResmi" />

    <EditText
        android:id="@+id/textViewKullaniciFavorileriDetayMalzemeler"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:text="TextView"
        android:inputType="textMultiLine"
        android:textColorHint="@color/new_primarycolor"
        android:textColor="@color/new_primarycolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3KullaniciFavorileri" />

    <EditText
        android:id="@+id/textView4KullaniciFavorileri"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="136dp"
        android:gravity="center"
        android:text="YAPILIÅž"
        android:textColor="@color/new_primarycolor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewKullaniciFavorileriDetayMalzemeler" />

    <EditText
        android:id="@+id/textViewKullaniciFavorileriYapilisDetay"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        android:inputType="textMultiLine"
        android:textColor="@color/new_primarycolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4KullaniciFavorileri"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/buttonFavorilerdenSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="284dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="39dp"
        android:text="Sil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewKullaniciFavorileriYapilisDetay" />

</LinearLayout>