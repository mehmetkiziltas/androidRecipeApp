<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KullaniciIslemleri.KullabiciAnaSayfa.YemekEklemeActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KullaniciIslemleri.KullabiciAnaSayfa.YemekEklemeActivity">

        <ImageView
            android:id="@+id/imageViewKullaniciYemekEklemeResmi"
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:layout_marginStart="141dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="130dp"
            android:background="@color/new_primarycolor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/group" />

        <EditText
            android:id="@+id/TextKullaniciYemekEklemeEnBelirginOzelligi"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="27dp"
            android:hint="Yemek İçeriği"
            android:textColor="@color/new_primarycolor"
            android:textColorHint="@color/new_primarycolor"
            app:layout_constraintBottom_toTopOf="@+id/YemekadiText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewKullaniciYemekEklemeResmi">

        </EditText>

        <EditText
            android:id="@+id/TextKullaniciYemekEklemeKategoriAdi"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="27dp"
            android:hint="yemek kategori"
            android:textColor="@color/new_primarycolor"
            android:textColorHint="@color/new_primarycolor"
            app:layout_constraintBottom_toTopOf="@+id/YemekadiText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextKullaniciYemekEklemeEnBelirginOzelligi"
            app:layout_constraintVertical_bias="0.0">

        </EditText>

        <EditText
            android:id="@+id/TextKullaniciYemekEklemeYapilis"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="yapılış"
            android:inputType="textMultiLine"
            android:textColor="@color/new_primarycolor"
            android:textColorHint="@color/new_primarycolor"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextKullaniciYemekEklemeMalzemeler" />

        <EditText
            android:id="@+id/TextKullaniciYemekEklemeMalzemeler"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="malzemeler"
            android:inputType="textMultiLine"
            android:textColor="@color/new_primarycolor"
            android:textColorHint="@color/new_primarycolor"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextKullaniciYemekEklemeYemekAdi" />

        <EditText
            android:id="@+id/TextKullaniciYemekEklemeYemekAdi"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:hint="yemek adı"
            android:inputType="textPersonName"
            android:textColor="@color/new_primarycolor"
            android:textColorHint="@color/new_primarycolor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextKullaniciYemekEklemeKategoriAdi" />

        <Button
            android:id="@+id/UploadButtonKullaniciYemekEkleme"
            android:layout_width="169dp"
            android:layout_height="46dp"
            android:layout_marginStart="121dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="20dp"
            android:background="@color/new_primarycolor"
            android:text="Upload"
            android:textColorLink="@color/new_primarycolor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextKullaniciYemekEklemeYapilis"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>